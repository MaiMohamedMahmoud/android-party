<resources>
    <style name="Theme.Androidparty" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowBackground">@drawable/bg</item>-->
    </style>

    <style name="EditTextInputStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">@dimen/edit_text_element_max_width</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">@dimen/edit_text_element_max_width</item>

        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:cursorVisible">false</item>
    </style>
</resources>