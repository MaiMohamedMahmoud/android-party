<resources>

  <style name="Theme.Androidparty" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="EditTextInputStyle" parent="@android:style/Widget.EditText">
    <item name="android:textColor">@color/edit_text_color</item>
    <item name="android:textSize">@dimen/text_size</item>
    <item name="android:minWidth">@dimen/max_width</item>
    <item name="android:paddingStart">50dp</item>
    <item name="android:paddingTop">@dimen/padding_element</item>
    <item name="android:paddingEnd">@dimen/padding_element</item>
    <item name="android:paddingBottom">@dimen/padding_element</item>
    <item name="android:cursorVisible">false</item>
  </style>

  <style name="ButtonStyle">
    <item name="android:textColor">@color/white_color</item>
    <item name="android:textSize">@dimen/text_size</item>
    <item name="android:minWidth">@dimen/max_width</item>
    <item name="android:paddingTop">@dimen/padding_element</item>
    <item name="android:paddingEnd">@dimen/padding_element</item>
    <item name="android:paddingBottom">@dimen/padding_element</item>
    <item name="android:cursorVisible">false</item>
  </style>
</resources>